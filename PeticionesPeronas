    calificacionById(idcalifico: 1, idcalificado: 2) {
          idcalifico
      	idcalificado
      	calificacion
    }
}

creacion calificacion CORRECTO
    mutation {
        createCalificacion(calificacion: {
           idcalifico: 3
            idcalificado : 4
            calificacion :3
        }) {
            calificacion
        }
    }
DEBERIA FUNCIONAR
